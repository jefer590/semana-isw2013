<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutUsActivity" >

    <ImageView
        android:id="@+id/aboutus_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/aboutus_logo"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/empty" />

    <ScrollView
        android:id="@+id/aboutus_scroll_layout"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/aboutus_logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="14dp" >

        <LinearLayout
            android:id="@+id/aboutus_usernames_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55494949"
            android:orientation="vertical" >
            <TextView
		        android:id="@+id/aboutus_textview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@+id/aboutus_logo"
		        android:layout_marginLeft="10dp"
		        android:gravity="right"
		        android:text="ITSON Mobile Lab - Equipo"
		        android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>