<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000">	
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#000000"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".MainActivity" >
	
	    <ImageButton
	        android:id="@+id/main_button_conferencias"
	        android:layout_width="350dp"
	        android:layout_height="150dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/empty"
	        android:contentDescription="@string/empty"
	        />
	
	    <TextView
	        android:id="@+id/name"
	        android:layout_width="wrap_content"
	        android:layout_height= "wrap_content"
	        android:background="#88000000"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:layout_alignBottom="@+id/main_button_conferencias"
	        android:layout_alignLeft="@+id/main_button_conferencias"
	        android:layout_alignRight="@+id/main_button_conferencias"
	        android:paddingTop="5dp"
	        android:drawableRight="@android:drawable/ic_btn_speak_now"
	        android:gravity="center_vertical"
	        android:text="Conferencias"
	        android:textColor="#FFFFFF"
	        android:textSize="18dp" />
	
	    	    	    
	    <ImageButton
	        android:id="@+id/main_button_talleres"
	        android:layout_width="350dp"
	        android:layout_height="150dp"
	        android:layout_marginTop="10dp"
	        android:layout_alignLeft="@+id/main_button_conferencias"
	        android:layout_below="@+id/main_button_conferencias"
	        android:text="@string/empty"
	        android:contentDescription="@string/empty"/>
	    
	    <TextView 
	        android:id="@+id/TVTalleres"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#88000000"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:layout_alignBottom="@+id/main_button_talleres"
	        android:layout_alignLeft="@+id/main_button_talleres"
	        android:layout_alignRight="@+id/main_button_talleres"
	        android:paddingTop="5dp"
	        android:text="Talleres"
	        android:drawableRight="@android:drawable/ic_menu_edit"
	        android:gravity="center_vertical"
	        android:textColor="#FFFFFF"
	        android:textSize="18dp"/>"
	    
	    <ImageButton 
	        android:id="@+id/main_button_horario"
	        android:layout_width="350dp"
	        android:layout_height="150dp"
	        android:layout_marginTop="10dp"
	        android:layout_alignLeft="@+id/main_button_talleres"
	        android:layout_below="@+id/main_button_talleres"
	        android:text="@string/empty"
	        android:contentDescription="@string/empty"/>
	    
	    <TextView 
	        android:id="@+id/TVHorario"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#88000000"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:layout_alignBottom="@+id/main_button_horario"
	        android:layout_alignLeft="@+id/main_button_horario"
	        android:layout_alignRight="@+id/main_button_horario"
	        android:paddingTop="5dp"
	        android:text="Horario"
	        android:drawableRight="@android:drawable/ic_menu_agenda"
	        android:gravity="center_vertical"
	        android:textColor="#FFFFFF"
	        android:textSize="18dp"/>
	    
	    <ImageButton
	        android:id="@+id/main_button_semanaisw2013"
	        android:layout_width="350dp"
	        android:layout_height="150dp"
	        android:layout_marginTop="10dp"
	        android:layout_alignLeft="@+id/main_button_horario"
	        android:layout_below="@+id/main_button_horario"
	        android:text="@string/empty"
	        android:contentDescription="@string/empty"
	        />
	
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#88000000"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:layout_alignBottom="@+id/main_button_semanaisw2013"
	        android:layout_alignLeft="@+id/main_button_semanaisw2013"
	        android:layout_alignRight="@+id/main_button_semanaisw2013"
	        android:paddingTop="5dp"
	        android:text="#SEMANAISW2013"
	        android:drawableRight="@android:drawable/ic_menu_view"
	        android:gravity="center_vertical"
	        android:textColor="#FFFFFF"
	        android:textSize="18dp"/>
	    
	    <ImageButton 
	        android:id="@+id/main_button_register"
	        android:layout_width="350dp"
	        android:layout_height="150dp"
	        android:layout_marginTop="10dp"
	        android:layout_alignLeft="@+id/main_button_semanaisw2013"
	        android:layout_below="@+id/main_button_semanaisw2013"
	        android:text="@string/empty"
	        android:contentDescription="@string/empty"/>
	    
	    <TextView 
	        android:id="@+id/TVRegister"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#88000000"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:layout_alignBottom="@+id/main_button_register"
	        android:layout_alignLeft="@+id/main_button_register"
	       	android:layout_alignRight="@+id/main_button_register"
	       	android:paddingTop="5dp"
	       	android:drawableRight="@android:drawable/star_on"
	       	android:gravity="center_vertical"
	       	android:text="REGISTRATE"
	       	android:textColor="#FFFFFF"
	       	android:textSize="18dp"/>"
	    
	    <ImageButton
	        android:id="@+id/main_button_itson"
	        android:layout_width="350dp"
	        android:layout_height="150dp"
	        android:background="#33B5E5"
	        android:layout_marginTop="10dp"
	        android:layout_alignLeft="@+id/main_button_register"
	        android:layout_below="@+id/main_button_register"
	        android:text="@string/empty"
	        android:contentDescription="@string/empty"
	        />
	    
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#88000000"
	        android:paddingBottom="5dp"
	        android:paddingLeft="10dp"
	        android:layout_alignBottom="@+id/main_button_itson"
	        android:layout_alignLeft="@+id/main_button_itson"
	        android:layout_alignRight="@+id/main_button_itson"
	        android:paddingTop="5dp"
	        android:drawableRight="@android:drawable/ic_menu_help"
            android:gravity="center_vertical"
	        android:text="Developers"
	        android:textColor="#FFFFFF"
	        android:textSize="18dp" />
	    
	</RelativeLayout>
</ScrollView>