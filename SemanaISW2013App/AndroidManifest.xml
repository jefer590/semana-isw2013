<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.itson.semanaisw2013app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mx.itson.semanaisw2013app.MainActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity android:name="mx.itson.semanaisw2013app.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="mx.itson.semanaisw2013app.ConferenceActivity"
            android:label="@string/title_activity_conference_activity" 
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="mx.itson.semanaisw2013app.MainActivity">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.itson.semanaisw2013app.MainActivity"/>
        </activity>
    </application>

</manifest>
